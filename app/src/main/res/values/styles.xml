<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
    <!-- COSTUM THEMES -->
    <style name="myTheme" parent="android:Theme.Light">
        <item name="android:typeface">serif</item>
    </style>
    
    <!-- COSTUM STYLES -->
    
    <!-- TEXT -->
    <style name="text">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#888</item>
    </style>

    <!-- TEXT : TITLE -->
    <style name="text.title">
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- TEXT : FOOTER -->
    <style name="text.footer">
        <item name="android:textSize">15sp</item>
        <item name="android:background">#000</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- TEXT : LABEL-->
    <style name="text.label">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- TEXT : LABEL : ERROR -->
    <style name="text.label.error">
        <item name="android:textColor">#f00</item>
    </style>

    <!-- BUTTON -->
    <style name="button" >
        <item name="android:background">@drawable/btn_bkg</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- BUTTON : RED -->
    <style name="button.red">
        <item name="android:background">@drawable/btn_bkg_red</item>
    </style>

    <!-- BUTTON : GREEN -->
    <style name="button.green">
        <item name="android:background">@drawable/btn_bkg_green</item>
    </style>

    <style name="myEditBox" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#44f</item>
        <item name="android:gravity">center</item>
    </style>
    
    
</resources>